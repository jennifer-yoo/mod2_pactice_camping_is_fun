<h1>Sign up </h1>

<%= form_for @play do |f| %>
        <%= f.label "Camper Name" %>
        <%= f.collection_select :camper_id, @campers, :id, :name%><br>
        <%= f.label "Activity" %>
        <%= f.collection_select :activity_id, @activities, :id, :name %><br>
        <%= f.label "Time" %>
        <%= f.number_field :time, {min: 1, max: 23} %><br>
        <%= f.submit %>
<% end %>
  