<h1> New Camper Sign Up </h1>

<%if flash[:my_errors]%> 
<%flash[:my_errors].each do |errors|%>
<%=errors%>
<%end%>
<%end%>

<%= form_for @camper do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :age %>
    <%= f.number_field :age, {min: 8, max: 18} %>
    <%= f.submit %>
<% end %>
  